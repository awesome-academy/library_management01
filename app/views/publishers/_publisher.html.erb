<div class="row">
  <div class="col-md-12">
    <table class="table">
      <thead>
        <tr>
          <th class="active width30"><%= sort_link(@q, :name, t(".name")) %></th>
          <th class="text-center active width40"><%= sort_link(@q, :address, t(".address")) %></th>
        </tr>
      </thead>
    </table>
  </div>
</div>

<% @publishers.each do |publisher| %>
  <div class="row">
    <div class="col-md-12">
      <table class="table table-hover">
        <tr>
          <td class="width30">
            <%= link_to publisher.name, publisher %>
          </td>
          <td class="text-center width40">
            <%= publisher.address %>
          </td>
        </tr>
      </table>
    </div>
  </div>
<% end %>
