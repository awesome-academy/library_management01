<div class="row">
  <div class="col-md-12">
    <table class="table">
      <thead>
        <tr>
          <th class="active width30"><%= t ".name" %></th>
          <th class="text-center active width40"><%= t ".parent_category" %></th>
        </tr>
      </thead>
    </table>
  </div>
</div>

<% @categories.each do |category| %>
  <div class="row">
    <div class="col-md-12">
      <table class="table table-hover">
        <tr>
          <td class="width30">
            <%= link_to category.name, category %>
          </td>
          <td class="text-center width40">
            <% if category.parent_id.present? %>
              <%= find_category(category.parent_id).name %>
            <% end %>
          </td>
      </table>
    </div>
  </div>
<% end %>
