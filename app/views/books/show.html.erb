<% provide(:title, @book.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= @book.name %>
      </h1>
      <% if @book.liked_by? current_user %>
        <p> <%= link_to t(".dislike"), book_likes_path(@book), method: :delete %> </p>
      <% else %>
        <p> <%= link_to t(".like"), book_likes_path(@book), method: :post %> </p>
      <% end %>
      <%= render "book_likes" %>
    </section>
    <section class="stats">
      <div class="col-md-6">
        <h3><%= t ".reviews" %></h3>
        <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal">
          <%= t ".write_review" %>
        </button>
    </div>
    </section>
    <section>
      <% provide :button_text, t(".submit") %>
      <%= render partial: "comments/form"%>
    </section>
    <section class="stats">
      <%= render "shared/count" %>
      <%= render partial: "books/comment", collection: @book.comments.reverse %>
    </section>
    <!-- <section class="stats">
      <%= render "shared/count" %>
    </section> -->
  </aside>
</div>
