<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container-fluid">
    <%= link_to t(".library_app"), root_path, id: "logo" %>
    <div class="collapse navbar-collapse" id="myNavbar">
    <ul class="nav navbar-nav">
      <li><%= link_to t(".book"), newbook_path %></li>
      <li class="dropdown">
        <%= link_to("#", class: "dropdown-toggle", "data-toggle" => "dropdown") do %>
          <%= t(".authors") %> <b class="caret"></b>
        <% end %>
        <ul class="dropdown-menu">
          <li><%= link_to t(".show_authors"), authors_path %></li>
          <li><%= link_to t(".new_authors"), newauthors_path %></li>
        </ul>
      </li>
      <li class="dropdown">
        <%= link_to("#", class: "dropdown-toggle", "data-toggle" => "dropdown") do %>
          <%= t(".publishers") %> <b class="caret"></b>
        <% end %>
        <ul class="dropdown-menu">
          <li><%= link_to t(".show_publishers"), publishers_path %></li>
          <li><%= link_to t(".new_publishers"), newpublishers_path %></li>
        </ul>
      </li>
      <li class="dropdown">
        <%= link_to("#", class: "dropdown-toggle", "data-toggle" => "dropdown") do %>
          <%= t(".categories") %> <b class="caret"></b>
        <% end %>
        <ul class="dropdown-menu">
          <li><%= link_to t(".show_categories"), categories_path %></li>
          <li><%= link_to t(".new_categories"), newcategories_path %></li>
        </ul>
      </li>
      <% if logged_in? %>
        <% if current_user.admin? %>
          <li><%= link_to t(".users"), users_path %></li>
        <% end %>
      <% end %>
    </ul>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <% if logged_in? %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= t(".account") %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t(".profile"), current_user %></li>
              <li><%= link_to t(".settings"), edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t(".logout"), logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t(".login"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</div>
</header>
