<% provide :title, t(".title") %>
<h1><%= t ".title" %></h1><hr>
<% if can? :create, Author %>
  <%= link_to new_author_path, class: "btn btn-primary" do %>
    <span class="glyphicon glyphicon-plus">&nbsp;<%= t(".new") %></span>
  <% end %>
  <hr>

  <div>
    <%= t ".download" %>
    <%= link_to t(".excel"), authors_path(format: "xls") %>
  </div></br>
<% end %>

<div class="input-group search_inline">
  <%= search_form_for @q do |f| %>
    <%= f.label :name %>
    <%= f.search_field :name_cont, placeholder: t(".search") %>
    <%= f.submit t(".search"), name: nil, class: "btn btn-primary btn_search" %>
  <% end %>
</div><hr>

<%= will_paginate %>

<%= render "author" %>

<%= will_paginate %>
