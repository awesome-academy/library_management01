<div class="count">
  <a href="<%= book_comments_path(@book) %>">
    <strong id="comments" class="stat">
      <p> <%= t("shared.comment", count: @book.comments.size) %> </p>
    </strong>
  </a>
  <div id="comments">
    <% if @book.comments.count.positive? %>
      <%= render partial: "books/comment", collection: @book.comments.reverse, as: :comment %>
    <% end %>
  </div>
</div>
