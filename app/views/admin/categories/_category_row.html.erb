<div class="row">
  <div class="col-md-12">
    <table class="table table-hover">
      <tr>
        <td class="width30">
          <%= link_to category.name, category %>
        </td>
        <td class="text-center width40">
          <% if !category.parent_id.nil? %>
          <%= find_category(category.parent_id).name %>
          <% end %>
        </td>
        <td class="text-right">
          <%= link_to t(".delete"), admin_category_path(category),
            method: :delete, data: {confirm: t(".confirm")} %>
            | <%= link_to t(".edit"), edit_admin_category_path(category) %>
        </td>
      </tr>
    </table>
  </div>
</div>
