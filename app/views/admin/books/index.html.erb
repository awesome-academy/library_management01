<% provide :title, t(".title") %>
<h1><%= t(".title") %></h1><hr>
  <% if can? :create, Book %>
    <%= link_to new_admin_book_path, class: "btn btn-primary" do %>
    <span class="glyphicon glyphicon-plus">&nbsp;<%= t(".new") %></span>
  <% end %>
  <hr>
  <div>
    <%= t ".download" %>
    <%= link_to t(".excel"), admin_books_path(format: "xls") %>
  </div><br>
<% end %>

<div class="input-group search_inline">
  <%= search_form_for @q do |f| %>
    <%= f.label :book %>
    <%= f.search_field :book_cont, placeholder: t(".search") %>
    <%= f.submit t(".search"), name: nil, class: "btn btn-primary btn_search" %>
  <% end %>
</div>
<hr>

<%= render "book" %>

<%= will_paginate %>
