<div class="row">
  <div class="col-md-12">
    <table class="table">
      <thead>
        <tr>
          <th class="text-justify active width25"><%= t ".name" %></th>
          <th class="text-justify active width15"><%= t ".category" %></th>
          <th class="text-center active width25"><%= t ".author" %></th>
          <th class="text-center active width25"><%= t ".publisher" %></th>
          <th class="text-right active"><%= t ".action" %></th>
        </tr>
      </thead>
    </table>
  </div>
</div>

<% @books.each do |book| %>
<div class="row">
  <div class="col-md-12">
    <table class="table table-hover">
      <tr>
        <td class="text-justify width25"><%= link_to book.name, book %></td>
        <td class="text-justify width15"><%= link_to book.category.name, book %></td>
        <td class="text-center width24"><%= book.author.name %></td>
        <td class="text-center width25"><%= book.publisher.name %></td>
        <td class="text-right">
          <%= link_to t(".delete"), admin_book_path(book), method: :delete,
            data: {confirm: t(".confirm")} %>
            | <%= link_to t(".edit"), edit_admin_book_path(book) %>
        </td>
      </tr>
    </table>
  </div>
</div>
<% end %>
