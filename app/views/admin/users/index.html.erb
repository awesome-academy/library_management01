<% provide(:title, t(".title")) %>
<h1><%= t(".title") %></h1>

<div>
  <%= t ".download" %>
  <%= link_to t(".excel"), users_path(format: "xls") %>
</div><hr>

<div class="input-group search_inline">
  <%= search_form_for @q, url: admin_users_path do |f| %>
    <%= f.search_field :name_cont, class: "form-control search_input",
      placeholder: t(".search") %>

    <%= f.label t(".admin") %>
    <%= f.radio_button :role_eq, 1, class: "btn_auto" %>

    <%= f.label t(".user") %>
    <%= f.radio_button :role_eq, 0, class: "btn_auto" %>

    <%= f.submit t(".button_search"), class: "btn btn-primary btn_search" %>
  <% end %>
</div>
</br><hr>

<ul class="users">
  <%= render "user" %>
</ul>
