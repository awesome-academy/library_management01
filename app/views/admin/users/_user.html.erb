<div class="row">
  <div class="col-md-8">
    <table class="table">
      <thead>
        <tr>
          <th class="active width30"><%= t ".avatar" %></th>
          <th class="text-center active width50"><%= sort_link(@q, :name, t(".name")) %></th>
          <th class="text-right active"><%= t ".action" %></th>
        </tr>
      </thead>
    </table>
  </div>
</div>

<% @users.each do |user| %>
  <div class="row">
    <div class="col-md-8">
      <table class="table table-hover">
        <tr>
          <td class="gravatar_size">
            <%= gravatar_for user, size: Settings.gravatar.small_size %>
          </td>
          <td class="text-center name_width">
            <%= link_to user.name, user %>
          </td>
          <td class="text-right">
            <%= link_to t(".delete"), admin_user_path(user), method: :delete,
              data: {confirm: t(".confirm")} %>
          </td>
        </tr>
      </table>
    </div>
  </div>
<% end %>

